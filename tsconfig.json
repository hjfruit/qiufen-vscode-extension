{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },
    "strict": true,
    // react18 用 react-jsx，18之前的版本用 react
    "jsx": "react",
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "views-doc"]
}
