{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "baseUrl": "."
  },
  "include": ["src"]
}
